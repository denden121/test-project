{
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && npm install",
  "framework": null,
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/proxy" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
